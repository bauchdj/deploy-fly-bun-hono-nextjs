{
	"name": "deploy-fly-bun-hono-nextjs",
	"version": "0.0.4",
	"type": "module",
	"private": true,
	"scripts": {
		"knip": "knip-bun --config knip.config.ts",
		"dev": "concurrently --names \"WEB,SERVER\" --prefix-colors \"cyan,magenta\" --prefix \"[{name}]\" --kill-others-on-fail \"bun --cwd=apps/web dev\" \"bun --cwd=apps/server dev\"",
		"dev:server": "bun --cwd=apps/server dev",
		"dev:web": "bun --cwd=apps/web dev",
		"build": "concurrently --names \"WEB,SERVER\" --prefix-colors \"cyan,magenta\" --prefix \"[{name}]\" --kill-others-on-fail \"bun run --cwd=apps/web build\" \"bun run --cwd=apps/server build\"",
		"build:server": "bun run --cwd=apps/server build",
		"build:web": "bun run --cwd=apps/web build",
		"start": "concurrently --names \"WEB,SERVER\" --prefix-colors \"cyan,magenta\" --prefix \"[{name}]\" --kill-others-on-fail \"bun --cwd=apps/web start\" \"bun --cwd=apps/server start\"",
		"start:server": "bun --cwd=apps/server start",
		"start:web": "bun --cwd=apps/web start",
		"lint": "oxlint; eslint .; bun run --cwd=apps/web lint",
		"lint:fix": "oxlint --fix; eslint . --fix; bun run --cwd=apps/web lint --fix",
		"format": "bun prettier . --write --list-different",
		"format:check": "bun prettier . --check",
		"db:generate": "bun run --cwd=packages/db db:generate",
		"db:migrate": "bun run --cwd=packages/db db:migrate",
		"db:push": "bun run --cwd=packages/db db:push",
		"env:sync": "bun run scripts/copy-env-files.ts",
		"env:sync:dry-run": "bun run scripts/copy-env-files.ts --dry-run",
		"env:clean": "bun run scripts/delete-child-env-files.ts",
		"env:clean:dry-run": "bun run scripts/delete-child-env-files.ts --dry-run",
		"env:clean-sync": "bun run env:clean && bun run env:sync",
		"docker:build": "\"./scripts/docker:{up,build}.sh\" build",
		"docker:up": "\"./scripts/docker:{up,build}.sh\" up",
		"docker:down": "docker compose down",
		"docker:remove": "docker compose down --rmi local -v",
		"docker:reset": "bun run docker:remove && bun run docker:up",
		"bump-all-versions": "bash scripts/bump-all-versions.sh",
		"fly:secrets:stage": "bun run env:clean-sync && bun run --cwd=apps/server fly:secrets:stage && bun run --cwd=apps/web fly:secrets:stage",
		"fly:deploy": "bun run bump-all-versions patch && bun run fly:secrets:stage && bun run --cwd=apps/server fly:deploy && bun run --cwd=apps/web fly:deploy"
	},
	"devDependencies": {
		"@deploy-fly-bun-hono-nextjs/eslint": "workspace:*",
		"@deploy-fly-bun-hono-nextjs/tsconfig": "workspace:*",
		"@types/bun": "latest",
		"concurrently": "^9.1.2",
		"eslint": "^9.29.0",
		"glob": "^11.0.3",
		"knip": "^5.61.2",
		"oxlint": "^1.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-sort-imports": "^1.8.8",
		"prettier-plugin-tailwindcss": "^0.6.12"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
